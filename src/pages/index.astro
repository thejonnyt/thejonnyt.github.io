---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

// Import content data
import introData from '../content/intro/data.json';
import educationData from '../content/education/data.json';
import experienceData from '../content/experience/data.json';
import projectsData from '../content/projects/data.json';
import publicationsData from '../content/publications/data.json';
import skillsData from '../content/skills/data.json';
import miscData from '../content/misc/data.json';

// Helper function to format dates
function formatDate(dateStr: string): string {
  if (dateStr === 'present') return 'Present';
  const date = new Date(dateStr);
  return date.toLocaleDateString('en-US', { year: 'numeric', month: 'short' });
}
---

<BaseLayout title={`${introData.name} - Portfolio & Resume`} description={introData.tagline}>
  <Header />

  <main class="container">
    <!-- Hero / Introduction Section -->
    <section class="hero section">
      <h1>{introData.name}</h1>
      <p class="tagline">{introData.title}</p>
      <p class="text-muted">{introData.tagline}</p>

      <div class="contact-links">
        {introData.email && (
          <a href={`mailto:${introData.email}`}>Email</a>
        )}
        {introData.github && (
          <a href={introData.github} target="_blank" rel="noopener">GitHub</a>
        )}
        {introData.linkedin && (
          <a href={introData.linkedin} target="_blank" rel="noopener">LinkedIn</a>
        )}
      </div>
    </section>

    <!-- About Section -->
    <section id="about" class="section">
      <h2>About</h2>
      {introData.bio.map((paragraph: string) => (
        <p>{paragraph}</p>
      ))}
    </section>

    <!-- Experience Section -->
    <section id="experience" class="section">
      <h2>Experience</h2>
      {experienceData.map((exp: any) => (
        <div class="timeline-item">
          <div class="timeline-header">
            <div>
              <h3>{exp.position}</h3>
              <p class="text-muted">{exp.company} • {exp.location}</p>
            </div>
            <p class="text-muted date">
              {formatDate(exp.startDate)} - {exp.current ? 'Present' : formatDate(exp.endDate)}
            </p>
          </div>
          <p>{exp.description}</p>
          <ul>
            {exp.achievements.map((achievement: string) => (
              <li>{achievement}</li>
            ))}
          </ul>
          {exp.technologies && exp.technologies.length > 0 && (
            <div class="tags">
              {exp.technologies.map((tech: string) => (
                <span class="tag">{tech}</span>
              ))}
            </div>
          )}
        </div>
      ))}
    </section>

    <!-- Projects Section -->
    <section id="projects" class="section">
      <h2>Projects</h2>
      {projectsData.filter((p: any) => p.featured).map((project: any) => (
        <div class="project-card">
          <h3>{project.name}</h3>
          <p class="text-muted">{project.tagline}</p>
          <p>{project.description}</p>
          {project.highlights && (
            <ul>
              {project.highlights.map((highlight: string) => (
                <li>{highlight}</li>
              ))}
            </ul>
          )}
          <div class="tags">
            {project.technologies.map((tech: string) => (
              <span class="tag">{tech}</span>
            ))}
          </div>
          <div class="project-links">
            {project.links.github && (
              <a href={project.links.github} target="_blank" rel="noopener">GitHub →</a>
            )}
            {project.links.demo && (
              <a href={project.links.demo} target="_blank" rel="noopener">Demo →</a>
            )}
          </div>
        </div>
      ))}
    </section>

    <!-- Publications Section -->
    {publicationsData.length > 0 && (
      <section id="publications" class="section">
        <h2>Publications</h2>
        {publicationsData.map((pub: any) => (
          <div class="publication-item">
            <h3>{pub.title}</h3>
            <p class="text-muted">
              {pub.authors.join(', ')} • {pub.venue}, {pub.year}
            </p>
            <p>{pub.abstract}</p>
            <div class="publication-links">
              {pub.links.paper && (
                <a href={pub.links.paper} target="_blank" rel="noopener">Paper →</a>
              )}
              {pub.links.code && (
                <a href={pub.links.code} target="_blank" rel="noopener">Code →</a>
              )}
            </div>
          </div>
        ))}
      </section>
    )}

    <!-- Education Section -->
    <section id="education" class="section">
      <h2>Education</h2>
      {educationData.map((edu: any) => (
        <div class="timeline-item">
          <div class="timeline-header">
            <div>
              <h3>{edu.degree} in {edu.field}</h3>
              <p class="text-muted">{edu.institution} • {edu.location}</p>
            </div>
            <p class="text-muted date">
              {formatDate(edu.startDate)} - {formatDate(edu.endDate)}
            </p>
          </div>
          {edu.description && <p>{edu.description}</p>}
          {edu.highlights && (
            <ul>
              {edu.highlights.map((highlight: string) => (
                <li>{highlight}</li>
              ))}
            </ul>
          )}
        </div>
      ))}
    </section>

    <!-- Skills Section -->
    <section id="skills" class="section">
      <h2>Skills</h2>
      {skillsData.categories.map((category: any) => (
        <div class="skills-category">
          <h3>{category.name}</h3>
          <div class="tags">
            {category.skills.map((skill: any) => (
              <span class="tag">{skill.name}</span>
            ))}
          </div>
        </div>
      ))}
    </section>

    <!-- Contact Section -->
    <section id="contact" class="section">
      <h2>Get in Touch</h2>
      <p>I'm currently looking for new opportunities. Feel free to reach out!</p>
      <div class="contact-links">
        <a href={`mailto:${introData.email}`} class="button">Send me an email</a>
      </div>
    </section>
  </main>

  <Footer />
</BaseLayout>

<style>
  .hero {
    padding: var(--space-2xl) 0;
  }

  .hero h1 {
    font-size: 3rem;
    margin-bottom: var(--space-sm);
  }

  .tagline {
    font-size: 1.5rem;
    margin-bottom: var(--space-sm);
    color: var(--color-muted);
  }

  .contact-links {
    display: flex;
    gap: var(--space-lg);
    margin-top: var(--space-lg);
  }

  /* Timeline items (for experience & education) */
  .timeline-item {
    margin-bottom: var(--space-xl);
    padding-bottom: var(--space-xl);
    border-bottom: 1px solid var(--color-border);
  }

  .timeline-item:last-child {
    border-bottom: none;
  }

  .timeline-header {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: var(--space-md);
    gap: var(--space-lg);
  }

  .timeline-header h3 {
    margin-bottom: var(--space-xs);
  }

  .date {
    white-space: nowrap;
    font-size: 0.9rem;
  }

  /* Project cards */
  .project-card {
    margin-bottom: var(--space-xl);
    padding: var(--space-lg);
    border: 1px solid var(--color-border);
    border-radius: 8px;
    transition: border-color var(--transition-normal);
  }

  .project-card:hover {
    border-color: var(--color-accent);
  }

  .project-card h3 {
    margin-bottom: var(--space-xs);
  }

  .project-links {
    display: flex;
    gap: var(--space-lg);
    margin-top: var(--space-md);
  }

  /* Publication items */
  .publication-item {
    margin-bottom: var(--space-xl);
    padding-bottom: var(--space-xl);
    border-bottom: 1px solid var(--color-border);
  }

  .publication-item:last-child {
    border-bottom: none;
  }

  .publication-item h3 {
    margin-bottom: var(--space-xs);
  }

  .publication-links {
    display: flex;
    gap: var(--space-lg);
    margin-top: var(--space-md);
  }

  /* Skills */
  .skills-category {
    margin-bottom: var(--space-lg);
  }

  .skills-category h3 {
    font-size: 1.125rem;
    margin-bottom: var(--space-md);
  }

  /* Tags */
  .tags {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-sm);
    margin-top: var(--space-md);
  }

  .tag {
    display: inline-block;
    padding: var(--space-xs) var(--space-md);
    background-color: var(--color-border);
    border-radius: 4px;
    font-size: 0.85rem;
    color: var(--color-muted);
  }

  /* Button */
  .button {
    display: inline-block;
    padding: var(--space-md) var(--space-lg);
    background-color: var(--color-accent);
    color: white;
    border-radius: 6px;
    font-weight: 500;
    transition: background-color var(--transition-fast);
  }

  .button:hover {
    background-color: var(--color-accent-hover);
    color: white;
  }

  /* Responsive */
  @media (max-width: 640px) {
    .hero h1 {
      font-size: 2rem;
    }

    .tagline {
      font-size: 1.25rem;
    }

    .timeline-header {
      flex-direction: column;
      gap: var(--space-sm);
    }

    .date {
      white-space: normal;
    }
  }
</style>
