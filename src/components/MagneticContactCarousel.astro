---
import Icon from './Icon.astro';

interface Props {
  email: string;
  language?: 'en' | 'de';
  cvSource: any;
}

const { email, language = 'en', cvSource } = Astro.props;

const labels = {
  en: {
    download: 'Download CV',
    email: 'Send me an email',
    copy: 'Copy CV',
    copySuccess: 'Copied!',
  },
  de: {
    download: 'CV herunterladen',
    email: 'Email schreiben',
    copy: 'CV kopieren',
    copySuccess: 'Kopiert!',
  }
};

const text = labels[language];
---

<div
  class="magnetic-carousel"
  data-magnetic-carousel
  data-cv-source={JSON.stringify(cvSource)}
>
  <button
    class="carousel-card carousel-card--download"
    data-card="download"
    aria-label={text.download}
  >
    <Icon name="download" class="card-icon" ariaHidden="true" />
    <span class="card-label">{text.download}</span>
    <div class="tooltip" role="tooltip">
      <strong>Human-Readable CV (PDF)</strong>
      <p>Download a printable PDF version of the CV, optimized for human readers and traditional application processes.</p>
    </div>
  </button>

  <a
    href={`mailto:${email}`}
    class="carousel-card carousel-card--email carousel-card--focus"
    data-card="email"
    aria-label={text.email}
  >
    <Icon name="mail" class="card-icon" ariaHidden="true" />
    <span class="card-label">{text.email}</span>
  </a>

  <button
    class="carousel-card carousel-card--copy"
    data-card="copy"
    aria-label={text.copy}
  >
    <svg class="card-icon" xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
      <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
      <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
    </svg>
    <span class="card-label">{text.copy}</span>
    <div class="tooltip" role="tooltip">
      <strong>Machine-Readable CV (JSON)</strong>
      <p>Copy structured JSON data for AI-powered CV screening tools, LLMs, and automated processing systems. No prompt injectionâ€”just clean, structured information.</p>
    </div>
  </button>
</div>

<!-- Toast notification -->
<div id="magnetic-carousel-toast" class="toast-notification">
  <div class="toast-icon">
    <svg class="toast-icon-success" width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M16.6667 5L7.50004 14.1667L3.33337 10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
    <svg class="toast-icon-error" width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M15 5L5 15M5 5L15 15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
  </div>
  <span class="toast-message"></span>
  <button class="toast-close" aria-label="Close notification">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <line x1="18" y1="6" x2="6" y2="18"></line>
      <line x1="6" y1="6" x2="18" y2="18"></line>
    </svg>
  </button>
</div>

<style>
  .magnetic-carousel {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1.5rem;
    padding: var(--space-2xl) 0;
    position: relative;
    width: 100%;
    max-width: 600px;
    margin: 0 auto;
  }

  .carousel-card {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: var(--space-sm);
    padding: var(--space-lg) var(--space-xl);
    border: 2px solid var(--color-border);
    border-radius: 12px;
    background: var(--color-bg);
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
    text-decoration: none;
    color: inherit;
    font-family: inherit;
    font-size: inherit;
    flex-shrink: 0;
  }

  .carousel-card--focus {
    border-color: var(--color-accent);
    background: var(--color-accent);
    color: white;
    box-shadow: 0 8px 24px rgba(0, 102, 255, 0.2);
    will-change: transform;
  }

  .carousel-card--download,
  .carousel-card--copy {
    opacity: 0.7;
    flex-shrink: 1;
  }

  .carousel-card:hover {
    border-color: var(--color-accent);
  }

  .carousel-card--focus:hover {
    background: var(--color-accent-hover);
  }

  .card-icon {
    width: 32px;
    height: 32px;
    stroke-width: 2px;
    flex-shrink: 0;
  }

  .carousel-card--focus .card-icon {
    color: white;
  }

  .card-label {
    font-size: 0.95rem;
    font-weight: 500;
    text-align: center;
    white-space: nowrap;
  }

  /* Tooltip */
  .tooltip {
    position: absolute;
    bottom: calc(100% + 12px);
    left: 50%;
    transform: translateX(-50%) translateY(4px);
    background: var(--color-background);
    border: 2px solid var(--color-accent);
    color: var(--color-foreground);
    padding: var(--space-md);
    border-radius: 8px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
    width: 320px;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.2s ease, transform 0.2s ease, visibility 0.2s;
    z-index: 1000;
    pointer-events: none;
  }

  .tooltip::after {
    content: '';
    position: absolute;
    top: 100%;
    left: 50%;
    width: 14px;
    height: 14px;
    background: var(--color-background);
    border-right: 2px solid var(--color-accent);
    border-bottom: 2px solid var(--color-accent);
    transform: translateX(-50%) translateY(-50%) rotate(45deg);
  }

  .carousel-card:hover .tooltip {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) translateY(0);
    pointer-events: auto;
  }

  .tooltip strong {
    display: block;
    margin: 0 0 var(--space-xs) 0;
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--color-accent);
    padding-bottom: var(--space-xs);
    border-bottom: 1px solid var(--color-border);
    text-align: left;
  }

  .tooltip p {
    margin: 0;
    font-size: 0.85rem;
    line-height: 1.6;
    color: var(--color-foreground);
    text-align: left;
  }

  /* Responsive - hide text on smaller screens */
  @media (max-width: 768px) {
    .magnetic-carousel {
      gap: 1rem;
      max-width: 500px;
    }

    .carousel-card {
      padding: var(--space-md) var(--space-lg);
    }

    .card-label {
      font-size: 0.85rem;
    }

    .card-icon {
      width: 28px;
      height: 28px;
    }
  }

  @media (max-width: 540px) {
    .magnetic-carousel {
      gap: 0.75rem;
    }

    .carousel-card {
      padding: var(--space-sm) var(--space-md);
    }

    .card-label {
      display: none;
    }

    .card-icon {
      width: 24px;
      height: 24px;
    }
  }

  /* Toast notification */
  .toast-notification {
    position: fixed;
    top: -100px;
    right: var(--space-lg);
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    background: var(--color-background);
    border: 2px solid var(--color-accent);
    color: var(--color-foreground);
    padding: var(--space-sm) var(--space-md);
    border-radius: 8px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
    z-index: 10000;
    transition: transform 0.3s ease, opacity 0.3s ease;
    opacity: 0;
    pointer-events: none;
  }

  .toast-notification.show {
    transform: translateY(calc(100px + var(--space-lg)));
    opacity: 1;
    pointer-events: auto;
  }

  .toast-icon {
    flex-shrink: 0;
    color: var(--color-accent);
  }

  .toast-close {
    background: none;
    border: none;
    padding: 4px;
    margin-left: var(--space-xs);
    cursor: pointer;
    color: var(--color-muted);
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 4px;
    transition: all 0.2s ease;
    flex-shrink: 0;
  }

  .toast-close:hover {
    background: var(--color-border);
    color: var(--color-foreground);
  }

  .toast-close:active {
    transform: scale(0.9);
  }

  .toast-icon-success {
    display: none;
  }

  .toast-icon-error {
    display: none;
  }

  .toast-notification.success .toast-icon-success {
    display: block;
  }

  .toast-notification.error .toast-icon-error {
    display: block;
    color: #dc2626;
  }

  .toast-message {
    font-size: 0.9rem;
    font-weight: 500;
  }

  @media (max-width: 640px) {
    .toast-notification {
      right: var(--space-md);
      left: var(--space-md);
      max-width: calc(100vw - var(--space-md) * 2);
    }
  }
</style>

<script>import '../scripts/magnetic-contact-carousel.ts';</script>
