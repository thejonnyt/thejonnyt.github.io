---
// Header component with navigation
// Get current path to determine language
const currentPath = Astro.url.pathname;
const isGerman = currentPath.startsWith('/de');
import CopyResumeButton from './CopyResumeButton.astro';
---

<header class="header" role="banner">
  <div class="progress-bar" aria-hidden="true"></div>
  <div class="container header-container">
    <a href={isGerman ? '/de' : '/'} class="logo" aria-label={isGerman ? "Startseite" : "Home"}>Johannes Tauscher</a>

    <nav class="nav" role="navigation" aria-label={isGerman ? "Hauptnavigation" : "Main navigation"}>
      <ul class="nav-links" role="list">
        {isGerman ? (
          <>
            <li><a href="#about" data-section="about">Ãœber mich</a></li>
            <li><a href="#experience" data-section="experience">Erfahrung</a></li>
            <li><a href="#projects" data-section="projects">Projekte</a></li>
            <li><a href="#education" data-section="education">Ausbildung</a></li>
            <li><a href="#contact" data-section="contact">Kontakt</a></li>
          </>
        ) : (
          <>
            <li><a href="#about" data-section="about">About</a></li>
            <li><a href="#experience" data-section="experience">Experience</a></li>
            <li><a href="#projects" data-section="projects">Projects</a></li>
            <li><a href="#education" data-section="education">Education</a></li>
            <li><a href="#contact" data-section="contact">Contact</a></li>
          </>
        )}
      </ul>
    </nav>

    <div class="header-actions">
      <div class="copy-btn-wrapper">
        <CopyResumeButton />
      </div>
      <div class="lang-switcher" role="navigation" aria-label={isGerman ? "Sprachauswahl" : "Language selection"}>
        <a href="/" class={!isGerman ? 'active' : ''} aria-label="English" aria-current={!isGerman ? 'page' : undefined} lang="en">EN</a>
        <span class="separator" aria-hidden="true">/</span>
        <a href="/de" class={isGerman ? 'active' : ''} aria-label="Deutsch" aria-current={isGerman ? 'page' : undefined} lang="de">DE</a>
      </div>
    </div>
  </div>
</header>

<style>
  .header {
    position: sticky;
    top: 0;
    background-color: var(--color-background);
    border-bottom: 1px solid var(--color-border);
    z-index: 100;
    backdrop-filter: blur(10px);
    background-color: rgba(255, 255, 255, 0.8);
  }

  @media (prefers-color-scheme: dark) {
    .header {
      background-color: rgba(30, 30, 30, 0.9);
    }
  }

  .progress-bar {
    position: absolute;
    top: 0;
    left: 0;
    height: 3px;
    background: linear-gradient(90deg, var(--color-accent), var(--color-accent-hover));
    width: 0%;
    transition: width 100ms ease-out;
    z-index: 101;
    box-shadow: 0 0 10px var(--color-accent);
  }

  @media (prefers-color-scheme: dark) {
    .progress-bar {
      box-shadow: 0 0 15px var(--color-accent);
    }
  }

  .header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: var(--header-height);
    position: relative;
    gap: var(--space-xl);
  }

  .logo {
    font-weight: 600;
    font-size: 1.125rem;
    color: var(--color-foreground);
    transition: color var(--transition-fast);
    white-space: nowrap;
    flex-shrink: 0;
  }

  .logo:hover {
    color: var(--color-accent);
  }

  .nav {
    display: flex;
    align-items: center;
    flex: 1;
  }

  .nav-links {
    display: flex;
    gap: var(--space-lg);
    list-style: none;
    margin: 0;
  }

  .nav-links a {
    color: var(--color-muted);
    font-size: 0.9rem;
    transition: all var(--transition-fast);
    position: relative;
  }

  .nav-links a:hover {
    color: var(--color-foreground);
  }

  .nav-links a.active {
    color: var(--color-accent);
    font-weight: 600;
  }

  .nav-links a.active::after {
    content: '';
    position: absolute;
    bottom: -8px;
    left: 0;
    right: 0;
    height: 2px;
    background-color: var(--color-accent);
    border-radius: 2px;
  }

  .header-actions {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    flex-shrink: 0;
  }

  .copy-btn-wrapper {
    display: flex;
    align-items: center;
  }

  .lang-switcher {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: 0.9rem;
  }

  .lang-switcher a {
    color: var(--color-muted);
    font-weight: 500;
    transition: color var(--transition-fast);
    padding: var(--space-xs) var(--space-sm);
    border-radius: 4px;
  }

  .lang-switcher a:hover {
    color: var(--color-foreground);
    background-color: var(--color-bg-secondary);
  }

  .lang-switcher a.active {
    color: var(--color-accent);
    font-weight: 600;
  }

  .lang-switcher .separator {
    color: var(--color-border);
  }

  @media (max-width: 768px) {
    .header-container {
      gap: var(--space-md);
    }

    .logo {
      display: none;
    }

    .nav {
      flex: 1;
    }

    .nav-links {
      gap: var(--space-md);
      font-size: 0.85rem;
    }

    .header-actions {
      gap: var(--space-sm);
    }
  }

  @media (max-width: 640px) {
    .header-container {
      gap: var(--space-sm);
    }

    .nav-links {
      gap: var(--space-sm);
      font-size: 0.8rem;
    }

    .lang-switcher {
      font-size: 0.85rem;
    }
  }
</style>

<script>
  // Update scroll progress bar
  function updateProgressBar() {
    const progressBar = document.querySelector('.progress-bar') as HTMLElement;
    if (!progressBar) return;

    const windowHeight = window.innerHeight;
    const documentHeight = document.documentElement.scrollHeight;
    const scrollTop = window.scrollY;

    // Calculate scroll percentage
    const scrollableHeight = documentHeight - windowHeight;
    const scrollPercentage = (scrollTop / scrollableHeight) * 100;

    progressBar.style.width = `${Math.min(scrollPercentage, 100)}%`;
  }

  // Update active section in navigation
  function updateActiveSection() {
    const sections = document.querySelectorAll('section[id]');
    const navLinks = document.querySelectorAll('.nav-links a[data-section]');

    let currentSection = '';
    const scrollPosition = window.scrollY + 150; // Offset for better UX

    // Check if we're at the bottom of the page
    const isAtBottom = window.innerHeight + window.scrollY >= document.documentElement.scrollHeight - 50;

    if (isAtBottom) {
      // If at bottom, highlight the last section
      const lastSection = sections[sections.length - 1];
      if (lastSection) {
        currentSection = lastSection.getAttribute('id') || '';
      }
    } else {
      // Normal scroll detection
      sections.forEach((section) => {
        const sectionTop = (section as HTMLElement).offsetTop;
        const sectionHeight = (section as HTMLElement).clientHeight;

        if (scrollPosition >= sectionTop && scrollPosition < sectionTop + sectionHeight) {
          currentSection = section.getAttribute('id') || '';
        }
      });
    }

    navLinks.forEach((link) => {
      const linkElement = link as HTMLAnchorElement;
      const linkSection = linkElement.dataset.section;

      // Education nav item is active for education, publications, and skills sections
      const isEducationActive = linkSection === 'education' &&
        (currentSection === 'education' || currentSection === 'publications' || currentSection === 'skills');

      if (linkSection === currentSection || isEducationActive) {
        linkElement.classList.add('active');
      } else {
        linkElement.classList.remove('active');
      }
    });
  }

  // Throttle function for better performance
  function throttle(func: () => void, delay: number) {
    let timeoutId: number | null = null;
    return () => {
      if (!timeoutId) {
        timeoutId = window.setTimeout(() => {
          func();
          timeoutId = null;
        }, delay);
      }
    };
  }

  // Initialize on page load
  document.addEventListener('DOMContentLoaded', () => {
    updateProgressBar();
    updateActiveSection();
  });

  // Update on scroll with throttling for performance
  const throttledUpdate = throttle(() => {
    updateProgressBar();
    updateActiveSection();
  }, 50);

  window.addEventListener('scroll', throttledUpdate);
</script>
