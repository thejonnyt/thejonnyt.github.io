---
// Header component with navigation
import LanguageToggle from './LanguageToggle.astro';
---

<header class="header">
  <div class="container header-container">
    <nav class="nav">
      <a href="/" class="logo">Johannes Tauscher</a>
      <ul class="nav-links">
        <li data-lang="en"><a href="#about-en" data-nav-section="about">About</a></li>
        <li data-lang="en"><a href="#experience-en" data-nav-section="experience">Experience</a></li>
        <li data-lang="en"><a href="#projects-en" data-nav-section="projects">Projects</a></li>
        <li data-lang="en"><a href="#publications-en" data-nav-section="publications">Publications</a></li>
        <li data-lang="en"><a href="#contact-en" data-nav-section="contact">Contact</a></li>

        <li data-lang="de"><a href="#about-de" data-nav-section="about">Ãœber mich</a></li>
        <li data-lang="de"><a href="#experience-de" data-nav-section="experience">Berufserfahrung</a></li>
        <li data-lang="de"><a href="#projects-de" data-nav-section="projects">Projekte</a></li>
        <li data-lang="de"><a href="#publications-de" data-nav-section="publications">Publikationen</a></li>
        <li data-lang="de"><a href="#contact-de" data-nav-section="contact">Kontakt</a></li>
      </ul>
    </nav>
    <div class="lang-toggle-wrapper">
      <LanguageToggle />
    </div>
  </div>
</header>

<style>
  .header {
    position: sticky;
    top: 0;
    background-color: var(--color-background);
    border-bottom: 1px solid var(--color-border);
    z-index: 100;
    backdrop-filter: blur(10px);
    background-color: rgba(255, 255, 255, 0.8);
  }

  @media (prefers-color-scheme: dark) {
    .header {
      background-color: rgba(10, 10, 10, 0.8);
    }
  }

  .header-container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    height: var(--header-height);
    position: relative;
  }

  .nav {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex: 1;
  }

  .logo {
    font-weight: 600;
    font-size: 1.125rem;
    color: var(--color-foreground);
  }

  .nav-links {
    display: flex;
    gap: var(--space-lg);
    list-style: none;
    margin: 0;
  }

  .lang-toggle-wrapper {
    margin-left: var(--space-lg);
    padding-right: 20px;
  }

  .nav-links a {
    color: var(--color-muted);
    font-size: 0.9rem;
    transition: color var(--transition-fast);
  }

  .nav-links a:hover {
    color: var(--color-foreground);
  }

  @media (max-width: 768px) {
    .header-container {
      flex-wrap: wrap;
    }

    .nav {
      flex: 1 1 100%;
    }

    .lang-toggle-wrapper {
      padding-right: 10px;
      margin-left: var(--space-md);
    }

    .nav-links {
      gap: var(--space-sm);
      font-size: 0.85rem;
    }
  }

  @media (max-width: 640px) {
    .lang-toggle-wrapper {
      padding-right: 0;
      margin-left: var(--space-sm);
    }

    .nav-links {
      gap: var(--space-xs);
      font-size: 0.8rem;
    }
  }
</style>
