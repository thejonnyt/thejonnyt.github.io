---
import copyResumeUrl from '../scripts/copy-resume.ts?url';
interface CvSource {
  profile: any;
  experience: any;
  education: any;
  skillsDatabase: any;
  projects: any;
  publications: any;
  awards?: any;
  language?: string;
}

interface Props {
  idPrefix?: string;
  cvSource: CvSource;
}

const { idPrefix = 'cv-actions', cvSource } = Astro.props;
const rootId = `${idPrefix}-root`;
const downloadButtonId = `${idPrefix}-download-pdf-btn`;
const copyButtonId = `${idPrefix}-copy-resume-btn`;
---

<div
  class="cv-actions-wrapper"
  id={rootId}
  data-cv-source={JSON.stringify(cvSource)}
>
  <div class="cv-actions">
    <button
      class="cv-action-btn"
      id={downloadButtonId}
      data-action="download"
      type="button"
      aria-label="Download printable CV (PDF)"
      title="Download CV"
    >
      <svg class="icon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
        <polyline points="7 10 12 15 17 10"></polyline>
        <line x1="12" y1="15" x2="12" y2="3"></line>
      </svg>
      <div class="tooltip" role="tooltip">
        <strong>Human-Readable CV (PDF)</strong>
        <p>Download a printable PDF version of the CV, optimized for human readers and traditional application processes.</p>
      </div>
    </button>

    <button
      class="cv-action-btn"
      id={copyButtonId}
      data-action="copy"
      type="button"
      aria-label="Copy machine-readable CV (JSON) to clipboard"
      title="Copy CV"
    >
      <svg class="icon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
        <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
      </svg>
      <div class="tooltip" role="tooltip">
        <strong>Machine-Readable CV (JSON)</strong>
        <p>Copy structured JSON data for AI-powered CV screening tools, LLMs, and automated processing systems. No prompt injectionâ€”just clean, structured information.</p>
      </div>
    </button>
  </div>

  <!-- Global toast notification -->
  <div class="toast-notification" role="status" aria-live="polite" aria-atomic="true">
    <svg class="toast-icon toast-icon-success" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <polyline points="20 6 9 17 4 12"></polyline>
    </svg>
    <svg class="toast-icon toast-icon-error" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <line x1="18" y1="6" x2="6" y2="18"></line>
      <line x1="6" y1="6" x2="18" y2="18"></line>
    </svg>
    <span class="toast-message"></span>
    <button class="toast-close" aria-label="Close notification">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>
  </div>
</div>

<style>
  .cv-actions {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
  }

  .cv-action-btn {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-xs);
    background: transparent;
    color: var(--color-muted);
    border: 1px solid var(--color-border);
    border-radius: 6px;
    cursor: pointer;
    transition: all var(--transition-fast);
    width: 36px;
    height: 36px;
  }

  .cv-action-btn:hover {
    color: var(--color-foreground);
    border-color: var(--color-muted);
    background-color: var(--color-bg-secondary);
  }

  .cv-action-btn:active {
    transform: scale(0.95);
  }

  .cv-action-btn .icon {
    flex-shrink: 0;
  }

  /* Tooltip */
  .tooltip {
    position: absolute;
    top: calc(100% + 12px);
    right: 0;
    background: var(--color-background);
    border: 2px solid var(--color-accent);
    color: var(--color-foreground);
    padding: var(--space-md);
    border-radius: 8px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
    width: 320px;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.2s ease, transform 0.2s ease, visibility 0.2s;
    transform: translateY(-4px);
    z-index: 1000;
    pointer-events: none;
  }

  .tooltip::after {
    content: '';
    position: absolute;
    bottom: 100%;
    right: 12px;
    width: 14px;
    height: 14px;
    background: var(--color-background);
    border-left: 2px solid var(--color-accent);
    border-top: 2px solid var(--color-accent);
    transform: translateY(50%) rotate(45deg);
  }

  .cv-action-btn:hover .tooltip {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
    pointer-events: auto;
  }

  .tooltip strong {
    display: block;
    margin: 0 0 var(--space-xs) 0;
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--color-accent);
    padding-bottom: var(--space-xs);
    border-bottom: 1px solid var(--color-border);
    text-align: left;
  }

  .tooltip p {
    margin: 0;
    font-size: 0.85rem;
    line-height: 1.6;
    color: var(--color-foreground);
    text-align: left;
  }

  /* Toast notification */
  .toast-notification {
    position: fixed;
    top: -100px;
    right: var(--space-lg);
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    background: var(--color-background);
    border: 2px solid var(--color-accent);
    color: var(--color-foreground);
    padding: var(--space-sm) var(--space-md);
    border-radius: 8px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
    z-index: 10000;
    transition: transform 0.3s ease, opacity 0.3s ease;
    opacity: 0;
    pointer-events: none;
  }

  .toast-notification.show {
    transform: translateY(calc(100px + var(--space-lg)));
    opacity: 1;
    pointer-events: auto;
  }

  .toast-icon {
    flex-shrink: 0;
    color: var(--color-accent);
  }

  .toast-close {
    background: none;
    border: none;
    padding: 4px;
    margin-left: var(--space-xs);
    cursor: pointer;
    color: var(--color-muted);
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 4px;
    transition: all 0.2s ease;
    flex-shrink: 0;
  }

  .toast-close:hover {
    background: var(--color-border);
    color: var(--color-foreground);
  }

  .toast-close:active {
    transform: scale(0.9);
  }

  .toast-icon-success {
    display: none;
  }

  .toast-icon-error {
    display: none;
  }

  .toast-notification.success .toast-icon-success {
    display: block;
  }

  .toast-notification.error .toast-icon-error {
    display: block;
    color: #dc2626;
  }

  .toast-message {
    font-size: 0.9rem;
    font-weight: 500;
  }

  /* Responsive adjustments */
  @media (max-width: 640px) {
    .tooltip {
      width: 280px;
      font-size: 0.8rem;
    }

    .toast-notification {
      right: var(--space-md);
      left: var(--space-md);
      max-width: calc(100vw - var(--space-md) * 2);
    }
  }
</style>

<script type="module" src={copyResumeUrl}></script>
