---
import CopyResumeButton from './CopyResumeButton.astro';
import headerScrollUrl from '../scripts/header-scroll.ts?url';

interface Props {
  cvSource: any;
}

// Header component with navigation
// Get current path to determine language
const currentPath = Astro.url.pathname;
const isGerman = currentPath.startsWith('/de');
const { cvSource } = Astro.props;
---

<header class="header" role="banner">
  <div class="progress-bar" aria-hidden="true"></div>
  <div class="header-wrapper">
    <a href={isGerman ? '/de' : '/'} class="logo" aria-label={isGerman ? "Startseite" : "Home"}>Johannes Tauscher</a>

    <div class="header-content container">
      <nav class="nav" role="navigation" aria-label={isGerman ? "Hauptnavigation" : "Main navigation"}>
        <ul class="nav-links" role="list">
          {isGerman ? (
            <>
              <li>
                <a href="#about" data-section="about" aria-label="Über mich">
                  <span class="nav-label full">Über mich</span>
                  <span class="nav-label short" aria-hidden="true">About</span>
                </a>
                <div class="section-indicator"></div>
              </li>
              <li>
                <a href="#experience" data-section="experience" aria-label="Erfahrung">
                  <span class="nav-label full">Erfahrung</span>
                  <span class="nav-label short" aria-hidden="true">Exp</span>
                </a>
                <div class="section-indicator"></div>
              </li>
              <li>
                <a href="#projects" data-section="projects" aria-label="Projekte">
                  <span class="nav-label full">Projekte</span>
                  <span class="nav-label short" aria-hidden="true">Projekte</span>
                </a>
                <div class="section-indicator"></div>
              </li>
              <li>
                <a href="#education" data-section="education" aria-label="Ausbildung">
                  <span class="nav-label full">Ausbildung</span>
                  <span class="nav-label short" aria-hidden="true">Edu</span>
                </a>
                <div class="section-indicator"></div>
              </li>
              <li>
                <a href="#contact" data-section="contact" aria-label="Kontakt">
                  <span class="nav-label full">Kontakt</span>
                  <span class="nav-label short" aria-hidden="true">Kontakt</span>
                </a>
                <div class="section-indicator"></div>
              </li>
            </>
          ) : (
            <>
              <li>
                <a href="#about" data-section="about" aria-label="About">
                  <span class="nav-label full">About</span>
                  <span class="nav-label short" aria-hidden="true">About</span>
                </a>
                <div class="section-indicator"></div>
              </li>
              <li>
                <a href="#experience" data-section="experience" aria-label="Experience">
                  <span class="nav-label full">Experience</span>
                  <span class="nav-label short" aria-hidden="true">Exp</span>
                </a>
                <div class="section-indicator"></div>
              </li>
              <li>
                <a href="#projects" data-section="projects" aria-label="Projects">
                  <span class="nav-label full">Projects</span>
                  <span class="nav-label short" aria-hidden="true">Prjcts</span>
                </a>
                <div class="section-indicator"></div>
              </li>
              <li>
                <a href="#education" data-section="education" aria-label="Education">
                  <span class="nav-label full">Education</span>
                  <span class="nav-label short" aria-hidden="true">Edu</span>
                </a>
                <div class="section-indicator"></div>
              </li>
              <li>
                <a href="#contact" data-section="contact" aria-label="Contact">
                  <span class="nav-label full">Contact</span>
                  <span class="nav-label short" aria-hidden="true">Contact</span>
                </a>
                <div class="section-indicator"></div>
              </li>
            </>
          )}
        </ul>
      </nav>
    </div>

    <div class="header-actions">
      <div class="header-copy-actions">
        <CopyResumeButton idPrefix="header-cv" cvSource={cvSource} />
      </div>
      <div class="lang-switcher" role="navigation" aria-label={isGerman ? "Sprachauswahl" : "Language selection"}>
        <a href="/" class={!isGerman ? 'active' : ''} aria-label="English" aria-current={!isGerman ? 'page' : undefined} lang="en">EN</a>
        <span class="separator" aria-hidden="true">/</span>
        <a href="/de" class={isGerman ? 'active' : ''} aria-label="Deutsch" aria-current={isGerman ? 'page' : undefined} lang="de">DE</a>
      </div>
    </div>
  </div>
</header>

<style>
  .header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    width: 100%;
    background-color: var(--color-background);
    border-bottom: 1px solid var(--color-border);
    z-index: 100;
    backdrop-filter: blur(10px);
    background-color: rgba(255, 255, 255, 0.8);
  }

  @media (prefers-color-scheme: dark) {
    .header {
      background-color: rgba(30, 30, 30, 0.9);
    }
  }

  .progress-bar {
    position: absolute;
    top: 0;
    left: 0;
    height: 3px;
    background: linear-gradient(90deg, var(--color-accent), var(--color-accent-hover));
    width: 0%;
    transition: width 100ms ease-out;
    z-index: 101;
    box-shadow: 0 0 10px var(--color-accent);
  }

  @media (prefers-color-scheme: dark) {
    .progress-bar {
      box-shadow: 0 0 15px var(--color-accent);
    }
  }

  .header-wrapper {
    display: flex;
    align-items: center;
    height: var(--header-height);
    position: relative;
    gap: var(--space-xl);
    padding-left: var(--space-lg);
    padding-right: var(--space-lg);
  }

  .logo {
    font-weight: 600;
    font-size: 1.125rem;
    color: var(--color-foreground);
    transition: color var(--transition-fast);
    white-space: nowrap;
    flex-shrink: 0;
  }

  .logo:hover {
    color: var(--color-accent);
  }

  .header-content {
    display: flex;
    align-items: center;
    justify-content: center;
    flex: 1;
    max-width: var(--max-width);
    margin: 0 auto;
  }

  .nav {
    display: flex;
    align-items: center;
  }

  .nav-links {
    display: flex;
    justify-content: center;
    gap: var(--space-lg);
    list-style: none;
    margin: 0;
  }

  .nav-links a {
    color: var(--color-muted);
    font-size: 0.9rem;
    transition: all var(--transition-fast);
    position: relative;
    white-space: nowrap;
  }

  .nav-links a:hover {
    color: var(--color-foreground);
  }

  .nav-links a.active {
    color: var(--color-accent);
    font-weight: 600;
  }

  .header-actions {
    display: flex;
    align-items: center;
    gap: var(--space-md);
    flex-shrink: 0;
  }

  .nav-label.short {
    display: none;
  }

  .header-copy-actions {
    display: flex;
    align-items: center;
  }

  .lang-switcher {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    font-size: 0.9rem;
  }

  .lang-switcher a {
    color: var(--color-muted);
    font-weight: 500;
    transition: color var(--transition-fast);
    padding: var(--space-xs) var(--space-sm);
    border-radius: 4px;
  }

  .lang-switcher a:hover {
    color: var(--color-foreground);
    background-color: var(--color-bg-secondary);
  }

  .lang-switcher a.active {
    color: var(--color-accent);
    font-weight: 600;
  }

  .lang-switcher .separator {
    color: var(--color-border);
  }

  @media (max-width: 768px) {
    .header {
      position: fixed;
    }

    .header-wrapper {
      gap: var(--space-md);
      padding-left: var(--space-lg);
    }

    .logo {
      display: none;
    }

    .header-content {
      padding-left: 0;
      padding-right: 0;
    }

    .nav {
      flex: 1;
    }

    .nav-links {
      gap: var(--space-md);
      font-size: 0.85rem;
    }

    .header-actions {
      gap: var(--space-sm);
    }

    .header-copy-actions {
      display: none;
    }
  }

  @media (max-width: 640px) {
    .header-wrapper {
      gap: var(--space-sm);
    }

    .nav-links {
      gap: var(--space-sm);
      font-size: 0.8rem;
    }

    .lang-switcher {
      font-size: 0.85rem;
    }
  }

  @media (max-width: 600px) {
    .nav-label.full {
      display: none;
    }

    .nav-label.short {
      display: inline;
    }
  }
</style>

<script type="module" src={headerScrollUrl}></script>
