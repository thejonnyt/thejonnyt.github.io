---
// Import all CV data
import introData from '../content/intro/data.json';
import experienceData from '../content/experience/data.json';
import educationData from '../content/education/data.json';
import skillsDatabase from '../content/skillsDatabase.json';
import projectsData from '../content/projects/data.json';
import publicationsData from '../content/publications/data.json';
import miscData from '../content/misc/data.json';

// Consolidate all data into a comprehensive machine-readable CV
const machineReadableCV = {
  profile: introData,
  experience: experienceData,
  education: educationData,
  skills: skillsDatabase.skills,
  projects: projectsData,
  publications: publicationsData,
  awards: miscData.awards,
  meta: {
    version: "1.0",
    generatedAt: new Date().toISOString(),
    format: "machine-readable-cv-json",
    description: "Structured CV data optimized for LLM and automated processing tools"
  }
};

// Convert to JSON string for embedding in the component
const cvJSON = JSON.stringify(machineReadableCV, null, 2);

interface Props {
  idPrefix?: string;
}

const { idPrefix = 'cv-actions' } = Astro.props;
const rootId = `${idPrefix}-root`;
const downloadButtonId = `${idPrefix}-download-pdf-btn`;
const copyButtonId = `${idPrefix}-copy-resume-btn`;
---

<div class="cv-actions-wrapper" id={rootId}>
  <div class="cv-actions">
    <button
      class="cv-action-btn"
      id={downloadButtonId}
      type="button"
      aria-label="Download printable CV (PDF)"
      title="Download CV"
    >
      <svg class="icon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M21 15v4a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2v-4"></path>
        <polyline points="7 10 12 15 17 10"></polyline>
        <line x1="12" y1="15" x2="12" y2="3"></line>
      </svg>
      <div class="tooltip" role="tooltip">
        <strong>Human-Readable CV (PDF)</strong>
        <p>Download a printable PDF version of the CV, optimized for human readers and traditional application processes.</p>
      </div>
    </button>

    <button
      class="cv-action-btn"
      id={copyButtonId}
      type="button"
      aria-label="Copy machine-readable CV (JSON) to clipboard"
      title="Copy CV"
      data-cv={cvJSON}
    >
      <svg class="icon" xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
        <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
      </svg>
      <div class="tooltip" role="tooltip">
        <strong>Machine-Readable CV (JSON)</strong>
        <p>Copy structured JSON data for AI-powered CV screening tools, LLMs, and automated processing systems. No prompt injectionâ€”just clean, structured information.</p>
      </div>
    </button>
  </div>

  <!-- Global toast notification -->
  <div class="toast-notification" role="status" aria-live="polite" aria-atomic="true">
    <svg class="toast-icon toast-icon-success" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <polyline points="20 6 9 17 4 12"></polyline>
    </svg>
    <svg class="toast-icon toast-icon-error" xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <line x1="18" y1="6" x2="6" y2="18"></line>
      <line x1="6" y1="6" x2="18" y2="18"></line>
    </svg>
    <span class="toast-message"></span>
    <button class="toast-close" aria-label="Close notification">
      <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <line x1="18" y1="6" x2="6" y2="18"></line>
        <line x1="6" y1="6" x2="18" y2="18"></line>
      </svg>
    </button>
  </div>
</div>

<style>
  .cv-actions {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
  }

  .cv-action-btn {
    position: relative;
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: var(--space-xs);
    background: transparent;
    color: var(--color-muted);
    border: 1px solid var(--color-border);
    border-radius: 6px;
    cursor: pointer;
    transition: all var(--transition-fast);
    width: 36px;
    height: 36px;
  }

  .cv-action-btn:hover {
    color: var(--color-foreground);
    border-color: var(--color-muted);
    background-color: var(--color-bg-secondary);
  }

  .cv-action-btn:active {
    transform: scale(0.95);
  }

  .cv-action-btn .icon {
    flex-shrink: 0;
  }

  /* Tooltip */
  .tooltip {
    position: absolute;
    top: calc(100% + 12px);
    right: 0;
    background: var(--color-background);
    border: 2px solid var(--color-accent);
    color: var(--color-foreground);
    padding: var(--space-md);
    border-radius: 8px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
    width: 320px;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.2s ease, transform 0.2s ease, visibility 0.2s;
    transform: translateY(-4px);
    z-index: 1000;
    pointer-events: none;
  }

  .tooltip::after {
    content: '';
    position: absolute;
    bottom: 100%;
    right: 12px;
    width: 14px;
    height: 14px;
    background: var(--color-background);
    border-left: 2px solid var(--color-accent);
    border-top: 2px solid var(--color-accent);
    transform: translateY(50%) rotate(45deg);
  }

  .cv-action-btn:hover .tooltip {
    opacity: 1;
    visibility: visible;
    transform: translateY(0);
    pointer-events: auto;
  }

  .tooltip strong {
    display: block;
    margin: 0 0 var(--space-xs) 0;
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--color-accent);
    padding-bottom: var(--space-xs);
    border-bottom: 1px solid var(--color-border);
    text-align: left;
  }

  .tooltip p {
    margin: 0;
    font-size: 0.85rem;
    line-height: 1.6;
    color: var(--color-foreground);
    text-align: left;
  }

  /* Toast notification */
  .toast-notification {
    position: fixed;
    top: -100px;
    right: var(--space-lg);
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    background: var(--color-background);
    border: 2px solid var(--color-accent);
    color: var(--color-foreground);
    padding: var(--space-sm) var(--space-md);
    border-radius: 8px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
    z-index: 10000;
    transition: transform 0.3s ease, opacity 0.3s ease;
    opacity: 0;
    pointer-events: none;
  }

  .toast-notification.show {
    transform: translateY(calc(100px + var(--space-lg)));
    opacity: 1;
    pointer-events: auto;
  }

  .toast-icon {
    flex-shrink: 0;
    color: var(--color-accent);
  }

  .toast-close {
    background: none;
    border: none;
    padding: 4px;
    margin-left: var(--space-xs);
    cursor: pointer;
    color: var(--color-muted);
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 4px;
    transition: all 0.2s ease;
    flex-shrink: 0;
  }

  .toast-close:hover {
    background: var(--color-border);
    color: var(--color-foreground);
  }

  .toast-close:active {
    transform: scale(0.9);
  }

  .toast-icon-success {
    display: none;
  }

  .toast-icon-error {
    display: none;
  }

  .toast-notification.success .toast-icon-success {
    display: block;
  }

  .toast-notification.error .toast-icon-error {
    display: block;
    color: #dc2626;
  }

  .toast-message {
    font-size: 0.9rem;
    font-weight: 500;
  }

  /* Responsive adjustments */
  @media (max-width: 640px) {
    .tooltip {
      width: 280px;
      font-size: 0.8rem;
    }

    .toast-notification {
      right: var(--space-md);
      left: var(--space-md);
      max-width: calc(100vw - var(--space-md) * 2);
    }
  }
</style>

<script lang="ts" define:vars={{ rootId, downloadButtonId, copyButtonId }}>
  // Store timeout ID to allow manual clearing
  let toastTimeout = null;

  const root = document.getElementById(`${rootId}`) as HTMLElement | null;
  if (!root) return;

  const toast = root.querySelector('.toast-notification') as HTMLElement | null;
  const toastCloseBtn = root.querySelector('.toast-close') as HTMLButtonElement | null;
  const downloadBtn = root.querySelector(`#${downloadButtonId}`) as HTMLButtonElement | null;
  const copyBtn = root.querySelector(`#${copyButtonId}`) as HTMLButtonElement | null;

  // Function to hide toast
  function hideToast() {
    if (!toast) return;

    // Clear any existing timeout
    if (toastTimeout !== null) {
      clearTimeout(toastTimeout);
      toastTimeout = null;
    }

    toast.classList.remove('show');
  }

  // Function to show toast notification
  function showToast(message: string, type: 'success' | 'error' = 'success') {
    if (!toast) return;

    const messageEl = toast.querySelector('.toast-message') as HTMLElement | null;
    if (!messageEl) return;

    // Clear any existing timeout first
    if (toastTimeout !== null) {
      clearTimeout(toastTimeout);
    }

    // Set message
    messageEl.textContent = message;

    // Set type
    toast.classList.remove('success', 'error');
    toast.classList.add(type, 'show');

    // Hide after 3 seconds
    toastTimeout = window.setTimeout(() => {
      toast.classList.remove('show');
      toastTimeout = null;
    }, 3000) as unknown as number;
  }

  function initCvActions() {
    if (toastCloseBtn) {
      toastCloseBtn.addEventListener('click', hideToast);
    }

    // Handle PDF download button
    if (downloadBtn) {
      downloadBtn.addEventListener('click', () => {
        try {
          // Create a temporary link element
          const link = document.createElement('a');
          link.href = '/files/Johannes_Tauscher_CV.pdf';
          link.download = 'Johannes_Tauscher_CV.pdf';
          link.style.display = 'none';
          document.body.appendChild(link);
          link.click();
          document.body.removeChild(link);

          showToast('Downloading CV...', 'success');
        } catch (err) {
          console.error('Failed to download PDF:', err);
          showToast('Download failed', 'error');
        }
      });
    }

    // Handle JSON copy button
    if (!copyBtn) return;

    const cvData = copyBtn.dataset.cv;

    copyBtn.addEventListener('click', async () => {
      if (!cvData) return;

      try {
        // Copy to clipboard
        await navigator.clipboard.writeText(cvData);
        showToast('CV data copied to clipboard!', 'success');
      } catch (err) {
        console.error('Failed to copy CV data:', err);

        // Fallback for older browsers
        try {
          const textarea = document.createElement('textarea');
          textarea.value = cvData;
          textarea.style.position = 'fixed';
          textarea.style.opacity = '0';
          document.body.appendChild(textarea);
          textarea.select();
          document.execCommand('copy');
          document.body.removeChild(textarea);
          showToast('CV data copied to clipboard!', 'success');
        } catch (fallbackErr) {
          showToast('Copy failed', 'error');
        }
      }
    });
  }

  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initCvActions);
  } else {
    initCvActions();
  }
</script>
