---
import Icon from './Icon.astro';

interface Props {
  email: string;
  language?: 'en' | 'de';
  cvSource: any;
}

const { email, language = 'en', cvSource } = Astro.props;

const labels = {
  en: {
    download: 'Download CV',
    email: 'Send me an email',
    copy: 'Copy CV',
    copySuccess: 'Copied!',
  },
  de: {
    download: 'CV herunterladen',
    email: 'Email schreiben',
    copy: 'CV kopieren',
    copySuccess: 'Kopiert!',
  }
};

const text = labels[language];
---

<div class="magnetic-carousel" data-magnetic-carousel>
  <button
    class="carousel-card carousel-card--download"
    data-card="download"
    aria-label={text.download}
  >
    <Icon name="download" class="card-icon" ariaHidden="true" />
    <span class="card-label">{text.download}</span>
    <div class="tooltip" role="tooltip">
      <strong>Human-Readable CV (PDF)</strong>
      <p>Download a printable PDF version of the CV, optimized for human readers and traditional application processes.</p>
    </div>
  </button>

  <a
    href={`mailto:${email}`}
    class="carousel-card carousel-card--email carousel-card--focus"
    data-card="email"
    aria-label={text.email}
  >
    <Icon name="mail" class="card-icon" ariaHidden="true" />
    <span class="card-label">{text.email}</span>
  </a>

  <button
    class="carousel-card carousel-card--copy"
    data-card="copy"
    aria-label={text.copy}
  >
    <svg class="card-icon" xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
      <rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
      <path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
    </svg>
    <span class="card-label">{text.copy}</span>
    <div class="tooltip" role="tooltip">
      <strong>Machine-Readable CV (JSON)</strong>
      <p>Copy structured JSON data for AI-powered CV screening tools, LLMs, and automated processing systems. No prompt injectionâ€”just clean, structured information.</p>
    </div>
  </button>
</div>

<!-- Toast notification -->
<div id="magnetic-carousel-toast" class="toast-notification">
  <div class="toast-icon">
    <svg class="toast-icon-success" width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M16.6667 5L7.50004 14.1667L3.33337 10" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
    <svg class="toast-icon-error" width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
      <path d="M15 5L5 15M5 5L15 15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
    </svg>
  </div>
  <span class="toast-message"></span>
  <button class="toast-close" aria-label="Close notification">
    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
      <line x1="18" y1="6" x2="6" y2="18"></line>
      <line x1="6" y1="6" x2="18" y2="18"></line>
    </svg>
  </button>
</div>

<style>
  .magnetic-carousel {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 1.5rem;
    padding: var(--space-2xl) 0;
    position: relative;
    width: 100%;
    max-width: 600px;
    margin: 0 auto;
  }

  .carousel-card {
    position: relative;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: var(--space-sm);
    padding: var(--space-lg) var(--space-xl);
    border: 2px solid var(--color-border);
    border-radius: 12px;
    background: var(--color-bg);
    cursor: pointer;
    transition: all 0.3s cubic-bezier(0.34, 1.56, 0.64, 1);
    text-decoration: none;
    color: inherit;
    font-family: inherit;
    font-size: inherit;
    flex-shrink: 0;
  }

  .carousel-card--focus {
    border-color: var(--color-accent);
    background: var(--color-accent);
    color: white;
    box-shadow: 0 8px 24px rgba(0, 102, 255, 0.2);
    will-change: transform;
  }

  .carousel-card--download,
  .carousel-card--copy {
    opacity: 0.7;
    flex-shrink: 1;
  }

  .carousel-card:hover {
    border-color: var(--color-accent);
  }

  .carousel-card--focus:hover {
    background: var(--color-accent-hover);
  }

  .card-icon {
    width: 32px;
    height: 32px;
    stroke-width: 2px;
    flex-shrink: 0;
  }

  .carousel-card--focus .card-icon {
    color: white;
  }

  .card-label {
    font-size: 0.95rem;
    font-weight: 500;
    text-align: center;
    white-space: nowrap;
  }

  /* Tooltip */
  .tooltip {
    position: absolute;
    bottom: calc(100% + 12px);
    left: 50%;
    transform: translateX(-50%) translateY(4px);
    background: var(--color-background);
    border: 2px solid var(--color-accent);
    color: var(--color-foreground);
    padding: var(--space-md);
    border-radius: 8px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
    width: 320px;
    opacity: 0;
    visibility: hidden;
    transition: opacity 0.2s ease, transform 0.2s ease, visibility 0.2s;
    z-index: 1000;
    pointer-events: none;
  }

  .tooltip::after {
    content: '';
    position: absolute;
    top: 100%;
    left: 50%;
    width: 14px;
    height: 14px;
    background: var(--color-background);
    border-right: 2px solid var(--color-accent);
    border-bottom: 2px solid var(--color-accent);
    transform: translateX(-50%) translateY(-50%) rotate(45deg);
  }

  .carousel-card:hover .tooltip {
    opacity: 1;
    visibility: visible;
    transform: translateX(-50%) translateY(0);
    pointer-events: auto;
  }

  .tooltip strong {
    display: block;
    margin: 0 0 var(--space-xs) 0;
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--color-accent);
    padding-bottom: var(--space-xs);
    border-bottom: 1px solid var(--color-border);
    text-align: left;
  }

  .tooltip p {
    margin: 0;
    font-size: 0.85rem;
    line-height: 1.6;
    color: var(--color-foreground);
    text-align: left;
  }

  /* Responsive - hide text on smaller screens */
  @media (max-width: 768px) {
    .magnetic-carousel {
      gap: 1rem;
      max-width: 500px;
    }

    .carousel-card {
      padding: var(--space-md) var(--space-lg);
    }

    .card-label {
      font-size: 0.85rem;
    }

    .card-icon {
      width: 28px;
      height: 28px;
    }
  }

  @media (max-width: 540px) {
    .magnetic-carousel {
      gap: 0.75rem;
    }

    .carousel-card {
      padding: var(--space-sm) var(--space-md);
    }

    .card-label {
      display: none;
    }

    .card-icon {
      width: 24px;
      height: 24px;
    }
  }

  /* Toast notification */
  .toast-notification {
    position: fixed;
    top: -100px;
    right: var(--space-lg);
    display: flex;
    align-items: center;
    gap: var(--space-sm);
    background: var(--color-background);
    border: 2px solid var(--color-accent);
    color: var(--color-foreground);
    padding: var(--space-sm) var(--space-md);
    border-radius: 8px;
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.15);
    z-index: 10000;
    transition: transform 0.3s ease, opacity 0.3s ease;
    opacity: 0;
    pointer-events: none;
  }

  .toast-notification.show {
    transform: translateY(calc(100px + var(--space-lg)));
    opacity: 1;
    pointer-events: auto;
  }

  .toast-icon {
    flex-shrink: 0;
    color: var(--color-accent);
  }

  .toast-close {
    background: none;
    border: none;
    padding: 4px;
    margin-left: var(--space-xs);
    cursor: pointer;
    color: var(--color-muted);
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 4px;
    transition: all 0.2s ease;
    flex-shrink: 0;
  }

  .toast-close:hover {
    background: var(--color-border);
    color: var(--color-foreground);
  }

  .toast-close:active {
    transform: scale(0.9);
  }

  .toast-icon-success {
    display: none;
  }

  .toast-icon-error {
    display: none;
  }

  .toast-notification.success .toast-icon-success {
    display: block;
  }

  .toast-notification.error .toast-icon-error {
    display: block;
    color: #dc2626;
  }

  .toast-message {
    font-size: 0.9rem;
    font-weight: 500;
  }

  @media (max-width: 640px) {
    .toast-notification {
      right: var(--space-md);
      left: var(--space-md);
      max-width: calc(100vw - var(--space-md) * 2);
    }
  }
</style>

<script define:vars={{ cvSource }}>
  // Initialize Lucide icons
  function initIcons() {
  }

  const proficiencyMap = {
    beginner: 'beginner',
    competent: 'intermediate',
    proficient: 'advanced',
    expert: 'expert',
    wizard: 'wizard'
  };

  const proficiencyOrder = ['wizard', 'expert', 'advanced', 'intermediate', 'beginner', 'unspecified'];

  function mapProficiency(level) {
    if (!level) return 'unspecified';
    return proficiencyMap[level] || level;
  }

  function buildSkillsSummary(skillsDatabase) {
    const skills = skillsDatabase?.skills || {};
    const items = Object.entries(skills).map(([name, skill]) => {
      const years = typeof skill.yearsOfExperience === 'number' ? skill.yearsOfExperience : null;
      return {
        name,
        proficiency: mapProficiency(skill.level),
        yearsOfExperience: years
      };
    });

    items.sort((a, b) => {
      const orderDelta = proficiencyOrder.indexOf(a.proficiency) - proficiencyOrder.indexOf(b.proficiency);
      if (orderDelta !== 0) return orderDelta;
      if (a.yearsOfExperience !== b.yearsOfExperience) {
        return (b.yearsOfExperience || 0) - (a.yearsOfExperience || 0);
      }
      return a.name.localeCompare(b.name);
    });

    const byProficiency = {};
    items.forEach(skill => {
      if (!byProficiency[skill.proficiency]) {
        byProficiency[skill.proficiency] = [];
      }
      const yearsLabel = typeof skill.yearsOfExperience === 'number' ? skill.yearsOfExperience : '';
      const entry = yearsLabel === '' ? skill.name : `${skill.name}(${yearsLabel})`;
      byProficiency[skill.proficiency].push(entry);
    });

    const proficiencyOrderUsed = proficiencyOrder.filter(level => byProficiency[level]);
    const extraBuckets = Object.keys(byProficiency)
      .filter(level => !proficiencyOrder.includes(level))
      .sort((a, b) => a.localeCompare(b));

    const order = [...proficiencyOrderUsed, ...extraBuckets];
    const summary = {
      schema: 'Skills grouped by proficiency; each entry is "Skill(Years)" and omits years when unknown.',
      order,
      totalCount: items.length
    };

    order.forEach(level => {
      summary[level] = byProficiency[level];
    });

    return summary;
  }

  function buildMachineCv(source) {
    const papers = (source.publications || []).map(paper => ({
      title: paper.title,
      citations: typeof paper.citations === 'number' ? paper.citations : null
    }));

    return {
      profile: source.profile,
      experience: source.experience,
      education: source.education,
      projects: source.projects,
      papers,
      awards: source.awards || [],
      skills: buildSkillsSummary(source.skillsDatabase),
      meta: {
        version: '1.1',
        generatedAt: new Date().toISOString(),
        format: 'machine-readable-cv-json',
        language: source.language || 'en',
        description: 'Structured CV data optimized for automated processing tools'
      }
    };
  }

  // Store timeout ID to allow manual clearing
  let magneticToastTimeout = null;

  // Function to hide toast
  function hideToast() {
    const toast = document.getElementById('magnetic-carousel-toast');
    if (!toast) return;

    // Clear any existing timeout
    if (magneticToastTimeout !== null) {
      clearTimeout(magneticToastTimeout);
      magneticToastTimeout = null;
    }

    toast.classList.remove('show');
  }

  // Function to show toast notification
  function showToast(message, type = 'success') {
    const toast = document.getElementById('magnetic-carousel-toast');
    if (!toast) return;

    const messageEl = toast.querySelector('.toast-message');
    if (!messageEl) return;

    // Clear any existing timeout first
    if (magneticToastTimeout !== null) {
      clearTimeout(magneticToastTimeout);
    }

    // Set message
    messageEl.textContent = message;

    // Set type
    toast.classList.remove('success', 'error');
    toast.classList.add(type, 'show');

    // Hide after 3 seconds
    magneticToastTimeout = window.setTimeout(() => {
      toast.classList.remove('show');
      magneticToastTimeout = null;
    }, 3000);
  }

  class MagneticCarousel {
    constructor(element) {
      this.carousel = element;
      this.cards = element.querySelectorAll('.carousel-card');
      this.init();
    }

    init() {
      // Add mouse move listener
      this.carousel.addEventListener('mousemove', this.handleMouseMove.bind(this));
      this.carousel.addEventListener('mouseleave', this.handleMouseLeave.bind(this));

      // Add click handlers
      this.cards.forEach(card => {
        card.addEventListener('click', this.handleCardClick.bind(this));
      });

      // Initialize icons
      initIcons();
    }

    handleMouseMove(e) {
      const rect = this.carousel.getBoundingClientRect();
      const x = e.clientX - rect.left;
      const y = e.clientY - rect.top;

      this.cards.forEach(card => {
        // Only apply magnetic effect to the email button
        const isFocusCard = card.classList.contains('carousel-card--focus');
        if (!isFocusCard) return;

        const cardRect = card.getBoundingClientRect();
        const cardX = cardRect.left - rect.left + cardRect.width / 2;
        const cardY = cardRect.top - rect.top + cardRect.height / 2;

        // Calculate distance from cursor to card center
        const deltaX = x - cardX;
        const deltaY = y - cardY;
        const distance = Math.sqrt(deltaX * deltaX + deltaY * deltaY);

        // Distance thresholds
        const minEffectDistance = 40;  // No effect below this distance
        const maxEffectDistance = 150; // No effect above this distance

        // No effect if too close (prevents extreme behavior near center) or too far
        if (distance < minEffectDistance || distance > maxEffectDistance) {
          card.style.transform = 'translate(0, 0)';
          return;
        }

        // Calculate normalized distance (0 at minDistance, 1 at maxDistance)
        const effectiveRange = maxEffectDistance - minEffectDistance;
        const effectiveDistance = distance - minEffectDistance;
        const normalizedDistance = effectiveDistance / effectiveRange;

        // Strength: 0 near center, peaks in middle, fades at edges
        // Using a bell curve-like function
        const strength = Math.sin(normalizedDistance * Math.PI);

        // Subtle movement - max 12px horizontal, 6px vertical
        const maxHorizontalMove = 12;
        const maxVerticalMove = 6;

        // Direction vector (normalized) - safe now because distance > minEffectDistance
        const dirX = deltaX / distance;
        const dirY = deltaY / distance;

        // Calculate movement
        const translateX = dirX * strength * maxHorizontalMove;
        const translateY = dirY * strength * maxVerticalMove;

        // Apply transform to email button only
        card.style.transform = `translate(${translateX}px, ${translateY}px)`;
      });
    }

    resetCard(card) {
      // Reset only the email button
      const isFocusCard = card.classList.contains('carousel-card--focus');
      if (isFocusCard) {
        card.style.transform = 'translate(0, 0)';
      }
    }

    handleMouseLeave() {
      this.cards.forEach(card => {
        this.resetCard(card);
      });
    }

    async handleCardClick(e) {
      const card = e.currentTarget;
      const cardType = card.getAttribute('data-card');

      if (cardType === 'download') {
        e.preventDefault();
        this.downloadCV();
      } else if (cardType === 'copy') {
        e.preventDefault();
        await this.copyCV(card);
      }
      // Email link handles itself naturally
    }

    async downloadCV() {
      try {
        // Fetch the PDF as a blob to force download instead of opening
        const response = await fetch('/files/Johannes_Tauscher_CV.pdf');

        if (!response.ok) {
          throw new Error('Failed to fetch CV PDF');
        }

        const blob = await response.blob();
        const blobUrl = URL.createObjectURL(blob);

        // Create a temporary link to download the blob
        const link = document.createElement('a');
        link.href = blobUrl;
        link.download = 'Johannes_Tauscher_CV.pdf';
        document.body.appendChild(link);
        link.click();
        document.body.removeChild(link);

        // Clean up the blob URL
        setTimeout(() => URL.revokeObjectURL(blobUrl), 100);

        // Show success toast
        showToast('CV PDF downloaded successfully!', 'success');
      } catch (error) {
        console.error('Failed to download CV:', error);
        showToast('Download failed', 'error');
      }
    }

    async copyCV(card) {
      const cvData = JSON.stringify(buildMachineCv(cvSource), null, 2);

      try {
        if (!navigator.clipboard || !window.isSecureContext) {
          throw new Error('Clipboard API unavailable');
        }

        // Copy JSON to clipboard
        await navigator.clipboard.writeText(cvData);

        // Show success toast
        showToast('CV data copied to clipboard!', 'success');
      } catch (error) {
        console.error('Failed to copy CV:', error);

        // Try fallback method for older browsers/insecure contexts
        try {
          const textarea = document.createElement('textarea');
          textarea.value = cvData;
          textarea.style.position = 'fixed';
          textarea.style.opacity = '0';
          document.body.appendChild(textarea);
          textarea.select();
          document.execCommand('copy');
          document.body.removeChild(textarea);
          showToast('CV data copied to clipboard!', 'success');
        } catch (fallbackErr) {
          showToast('Copy failed', 'error');
        }
      }
    }
  }

  // Initialize all magnetic carousels
  document.addEventListener('DOMContentLoaded', () => {
    // Handle toast close button
    const toastCloseBtn = document.querySelector('#magnetic-carousel-toast .toast-close');
    if (toastCloseBtn) {
      toastCloseBtn.addEventListener('click', hideToast);
    }

    const carousels = document.querySelectorAll('[data-magnetic-carousel]');
    carousels.forEach(carousel => {
      new MagneticCarousel(carousel);
    });
  });

  // Re-initialize on Astro page transitions (if using View Transitions)
  document.addEventListener('astro:page-load', () => {
    // Handle toast close button
    const toastCloseBtn = document.querySelector('#magnetic-carousel-toast .toast-close');
    if (toastCloseBtn) {
      toastCloseBtn.addEventListener('click', hideToast);
    }

    const carousels = document.querySelectorAll('[data-magnetic-carousel]');
    carousels.forEach(carousel => {
      new MagneticCarousel(carousel);
    });
  });
</script>
