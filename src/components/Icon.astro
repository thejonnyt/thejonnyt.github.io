---
const {
  name,
  class: className = '',
  size = 24,
  strokeWidth = 2,
  ariaHidden,
  ariaLabel,
  ...rest
} = Astro.props;

const icons = {
  mail: `
    <rect x="3" y="5" width="18" height="14" rx="2"></rect>
    <polyline points="3 7 12 13 21 7"></polyline>
  `,
  github: `
    <path d="M16 18l6-6-6-6"></path>
    <path d="M8 6l-6 6 6 6"></path>
  `,
  linkedin: `
    <rect x="3" y="3" width="18" height="18" rx="2"></rect>
    <line x1="8" y1="10" x2="8" y2="16"></line>
    <circle cx="8" cy="7" r="1"></circle>
    <path d="M12 16v-4a2 2 0 0 1 4 0v4"></path>
  `,
  download: `
    <path d="M12 3v12"></path>
    <polyline points="7 10 12 15 17 10"></polyline>
    <path d="M5 21h14"></path>
  `,
  headphones: `
    <path d="M4 13a8 8 0 0 1 16 0"></path>
    <rect x="2" y="13" width="4" height="7" rx="1"></rect>
    <rect x="18" y="13" width="4" height="7" rx="1"></rect>
  `,
  play: `
    <polygon points="8 5 19 12 8 19"></polygon>
  `,
  pause: `
    <rect x="6" y="4" width="4" height="16" rx="1"></rect>
    <rect x="14" y="4" width="4" height="16" rx="1"></rect>
  `,
  "volume-2": `
    <polygon points="11 5 6 9 3 9 3 15 6 15 11 19"></polygon>
    <path d="M15 9a4 4 0 0 1 0 6"></path>
    <path d="M18 6a8 8 0 0 1 0 12"></path>
  `,
  "volume-x": `
    <polygon points="11 5 6 9 3 9 3 15 6 15 11 19"></polygon>
    <line x1="16" y1="9" x2="22" y2="15"></line>
    <line x1="22" y1="9" x2="16" y2="15"></line>
  `,
  "minimize-2": `
    <polyline points="4 10 4 4 10 4"></polyline>
    <polyline points="20 14 20 20 14 20"></polyline>
  `,
  "maximize-2": `
    <polyline points="4 14 4 20 10 20"></polyline>
    <polyline points="20 10 20 4 14 4"></polyline>
  `,
  x: `
    <line x1="5" y1="5" x2="19" y2="19"></line>
    <line x1="19" y1="5" x2="5" y2="19"></line>
  `,
  "skip-back": `
    <rect x="5" y="4" width="2" height="16"></rect>
    <polygon points="19 20 9 12 19 4"></polygon>
  `,
  "skip-forward": `
    <rect x="17" y="4" width="2" height="16"></rect>
    <polygon points="5 4 15 12 5 20"></polygon>
  `,
  default: `
    <circle cx="12" cy="12" r="9"></circle>
    <line x1="12" y1="8" x2="12" y2="12"></line>
    <circle cx="12" cy="16" r="1"></circle>
  `
};

const iconMarkup = icons[name] ?? icons.default;
const ariaHiddenValue = ariaLabel ? undefined : (ariaHidden ?? 'true');
const roleValue = ariaLabel ? 'img' : 'presentation';
---

<svg
  class={className}
  width={size}
  height={size}
  viewBox="0 0 24 24"
  fill="none"
  stroke="currentColor"
  stroke-width={strokeWidth}
  stroke-linecap="round"
  stroke-linejoin="round"
  role={roleValue}
  aria-hidden={ariaHiddenValue}
  aria-label={ariaLabel}
  {...rest}
  set:html={iconMarkup}
></svg>
